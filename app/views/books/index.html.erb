<div class="col-md-9">
    <div class="row">


                    <div class="ui search focus" id="book-search">
                      <div class="ui icon input">
                        <input class="search" type="text" placeholder="Colors..." autocomplete="off">
                        <i class="search icon"></i>
                      </div>
                      <div class="results"></div>
                    </div>

                    <!--<input type="text" placeholder="Enter Your Title" name="query" id="book_search">-->


      <br>
      <br>
      <br>
      <br><br><br>



      <% @books.each do |book| %>

        <!--PRODUCT GRID START-->
        <div class="col-md-4 col-sm-6">
          <div class="books-listing-3">
            <div class="kode-thumb">

              <%= link_to book_path(book) do %>
                <%= image_tag book.image, width: '208px', height: '250px' %>
              <% end %>

            </div>
            <div class="kode-text">
              <p class="price">$80.75<span>90.75$</span></p>

              <h3>
                <%= link_to truncate(book.name, length: 12), book_path(book) %>
              </h3>

              <div class="kode-caption">
                <p>
                  <%= truncate(book.about, length: 200) %>
                </p>

                <%= form_tag(books_like_path, remote: true) do %>
                   <%= hidden_field_tag :book_id, book.id %>
                   <a book-id="<%= book.id %>"
                      class="book-like-btn <%= 'like-btn-active' if current_user && current_user.collection && (current_user.collection.books.include? book) %>"
                      style="cursor: pointer;">

                     <i class="fa fa-heart"></i>
                   </a>

                    <a href="#"><i class="fa fa-cart-plus"></i></a>
                    <a href="#"><i class="fa fa-link"></i></a>
                <% end %>

              </div>
            </div>
          </div>
        </div>
        <!--PRODUCT GRID END-->

      <% end %>
    </div>
</div>

<!--CONTENT END-->

</div>
<!--WRAPPER END-->
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->



<script>

    $('.ui.search').search({
        apiSettings: {
            url: "//" + location.host + "/agent/taxpayers?search={query}"
        },
        fields: {
            results: 'taxpayers',
            title: 'search_sugesstion_taxpayers',
            url: 'url'
        },
        minCharacters: 3
    });

</script>
