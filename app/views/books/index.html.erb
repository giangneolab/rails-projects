<div class="col-md-9">
    <div class="row">

      <% @books.each do |book| %>

        <!--PRODUCT GRID START-->
        <div class="col-md-4 col-sm-6">
          <div class="books-listing-3">
            <div class="kode-thumb">

              <%= link_to book_path(book) do %>
                <%= image_tag book.image, width: '208px', height: '250px' %>
              <% end %>

            </div>
            <div class="kode-text">
              <p class="price">$80.75<span>90.75$</span></p>

              <h3>
                <%= link_to truncate(book.name, length: 12), book_path(book) %>
              </h3>

              <div class="kode-caption">
                <p>
                  <%= truncate(book.about, length: 200) %>
                </p>
                <a href="#"><i class="fa fa-heart"></i></a>
                <a href="#"><i class="fa fa-cart-plus"></i></a>
                <a href="#"><i class="fa fa-link"></i></a>
              </div>
            </div>
          </div>
        </div>
        <!--PRODUCT GRID END-->

      <% end %>
    </div>
</div>

<!--CONTENT END-->

</div>
